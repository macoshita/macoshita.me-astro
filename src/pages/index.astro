---
import githubIcon from '@/icons/github.svg';
import twitterIcon from "@/icons/twitter.svg";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { formatDate } from "@/utils";

// 全記事取得
const posts = (await Astro.glob("./posts/*.md"))
  .map(({ url, frontmatter: { created_at, title } }) => ({
    url,
    date: new Date(created_at),
    title,
  }))
  .sort((a, b) => b.date.valueOf() - a.date.valueOf());
---

<BaseLayout lang='ja' title="@macoshita" description="@macoshita のブログ">
  <style>
    .links {
      margin-bottom: 1rem;
    }
    .link {
      display: inline-block;
      color: var(--nc-tx-2);
      margin-right: .5rem;
    }
    .link > img {
      width: 2rem;
      height: 2rem;
      margin: 0;
      vertical-align: middle;
    }
    .article {
      margin-bottom: 1rem;
      text-decoration: none;
    }
    .article time {
      color: var(--nc-ac-tx);
      font-size: 0.8rem;
    }
    .article h2 {
      font-weight: normal;
      font-size: 1rem;
      padding: 0;
      border: 0;
    }
  </style>
  <main>
    <section class="links">
      Software Engineer ❤ Flutter/Dart, Elixir, Svelte, etc.<br />
      <a class="link" href="https://github.com/macoshita"><img src={githubIcon} alt="github"></a>
      <a class="link" href="https://twitter.com/macoshita"><img src={twitterIcon} alt="twitter"></a>
    </section>

    <section>
      {posts.map(post => (
        <article class="article">
          <time>{formatDate(post.date)}</time>
          <h2><a href={post.url}>{post.title}</a></h2>
        </article>
      ))}
    </section>
  </main>
</BaseLayout>
