---
import { formatDate } from "@/utils";

export interface Props {
  createdAt: Date;
  title: string;
  url: string;
}
const { createdAt, title, url } = Astro.props;
---

<article class="article">
  <time>{formatDate(createdAt)}</time>
  <h2><a href={url}>{title}</a></h2>
</article>

<style>
  .article {
    margin-bottom: 1rem;
    text-decoration: none;
  }
  .article time {
    color: var(--nc-ac-tx);
    font-size: 0.8rem;
  }
  .article h2 {
    font-weight: normal;
    font-size: 1rem;
    padding: 0;
    border: 0;
  }
</style>
